{
    "name": "Redimark",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ],
    "omnibox": {
        "keyword": "redi"
    },
    "icons": { 
        "16": "icons/active16.png",
        "32": "icons/active32.png",
        "48": "icons/active48.png",
        "128": "icons/active128.png" 
    },
    "action": {
        "default_title": "Click to create a new redirect!",
        "default_popup": "popup.html"
    },
    "description": "Make a quick bookmark redirect using Redimark!"
}